                        Profile Information
                    </div>
                    <div class="card-body">
                        <!-- User Image -->
                        <img src="user-image.jpg" class="img-fluid rounded-circle mb-3" alt="User Image">
                        <!-- User Name -->
                        <h5 class="card-title">John Doe</h5>
                        <!-- User Email -->
                        <p class="card-text">john.doe@example.com</p>
                        <p id = "ratings">Seller Rating: 4.5/5</p>
                        <p id = "user-address">1234 Main St, Springfield, IL 62701</p>
                    </div>
                    <div class ="form_element">
                        <input type ="submit" value ="Request Custom Order">
                    </div>
                    <div class ="form_element">
                        <input type ="submit" value ="Contact Us">
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <!-- Order History -->
                <div class="card">
                    <div class="card-header">
                        Featured Items
                    </div>
                    <div class="card-body">
                        <!-- Orders List -->
                        <ul class="list-group">
                            <li class="list-group-item"><a href="">Product 0001</a></li>
                            <li class="list-group-item"><a href="">Product 0002</a></li>
                            <li class="list-group-item"><a href="">Product 0003</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

        
    </div>
    <div id="footer"></div>
