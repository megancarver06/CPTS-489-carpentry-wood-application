    <style>
        #header {
            padding-top: 20px;
            padding-bottom: 20px; 
            border-bottom: 6px solid #4d243d;
            background-color: #d0a98f;
            position: fixed;
            width: 100%;
            top: 0;
            height : 160px;
        }
        #header_blank {
            height : 200px;
        }
        #footer {
            margin-top: 20px;
            padding-top: 20px;
            padding-bottom: 20px; 
            background-color: #4d243d;
        }
        #footer p {
            color: #ecdcc9;
        }
        #logo {
            width: 400px;
            margin-bottom: 10px;
        }
        #logo:hover {
            cursor: pointer;
        }
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        nav ul li {
            display: inline-block;
            position: relative;
        }
        nav ul li a {
            display: block;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 18px;
            color: #4d243d;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        nav ul li a:hover {
            background-color: #ecdcc9;
            border-bottom: 6px solid #4d243d;
        }
        nav ul li ul {
            display: none;
            position: absolute;
            background-color: #ecdcc9;
        }
        nav ul li:hover ul {
            display: block;
        }
        nav ul li ul li {
            display: block;
            white-space: nowrap;
        }
        nav ul li ul li a {
            display: block;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 18px;
            color: #4d243d;
            font-weight: bold;
            transition: background-color 0.3s;
        }
        nav ul li ul li a:hover {
            background-color: #cac2b5;
        }
        .menu {
            margin-top: 50px;
            display: flex;
            justify-content: flex-end; 
        }
        .producttag-wood {
            text-align: center;
            color: white;
            font-size: small;
            margin: 5px;
            padding: 5px;
            border-style: solid;
            border-color: #36453B;
            border-radius: 15px;
            background-color: #36453B;
        }

        .producttag-item {
            text-align: center;
            color: white;
            font-size: small;
            margin: 5px;
            padding: 5px;
            border-style: solid;
            border-color: #4d243d;
            border-radius: 15px;
            background-color: #4d243d;
        }
        p {
            color: #4d243d;
        }
        h1 {
            color:#36453B;
        }
        h2 {
            color: #4d243d;
        }
        input[type=submit] {
            background-color: #d0a98f;
            color: #4d243d;
            font-weight: bold;
            padding: 12px 20px;
            border: 2px solid #cac2b5;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 20px;
        }
        input[type=submit]:hover {
            background-color: #ecdcc9;
        }
        .new_listing_button {
            background-color: #d0a98f;
            color: #4d243d;
            padding: 12px 20px;
            border: 2px solid #cac2b5;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-weight: bold;
        }
        .new_listing_button:hover {
            background-color: #ecdcc9;
        }
        .new_listing_button a {
            text-decoration: none;
            color: #4d243d;
        }
    </style>

